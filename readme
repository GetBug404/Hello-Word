#include<stdio.h>
#include<stdlib.h>
#include<string.h>

/************************
*函数名称：*in_input()
*函数参数：无
*功能描述：让用户输入任意个整数类型，当用户按下e键时代表用户的输入已经结束
*返回参数： p
*参数说明 返回的 p 是存放用户输入的数的 堆地址的的首地址
* *p的数据组成是： p[0]: 用户输入了多少个数字   p[1]~p[n] 用户输入的数据*/
int *in_input()
{
    *p = NULL;
    int temp,num = 2;
    char c = '0';
    printf("请输入你想要输入的数:");
    while(1)
    {
        scanf("%d",&temp);
        p = realloc(p,sizeof(int)*num);
        p[num - 1] = temp;
        c = getchar();
        if('e' == c)
        {
        }
        
    }
}


int main()
{
    printf("Hello World!!!");
    return 0;
}


